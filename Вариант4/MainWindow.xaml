<Window x:Class="Вариант4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Вариант4"
        mc:Ignorable="d"
        Title="MainWindow" Height="130" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label>Регистрация пользователя</Label>
        <Label Grid.Row="1">ФИО</Label>
        <TextBox Grid.Column="1" Grid.Row="1" Margin="10,0,10,0"/>
        <Label Grid.Row="2">Email</Label>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="10,0,10,0"/>
        <Button Grid.Row="3">Зарегистрироваться</Button>
    </Grid>
</Window>
